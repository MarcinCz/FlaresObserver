<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout android:layout_width="match_parent"
        android:padding="16dp"
        android:layout_height="wrap_content"
        android:background="@color/background_floating_material_light">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_white_36dp"
            />
        <TextView
            android:layout_width="80dp"
            android:layout_height="fill_parent"
            android:text="-1.6"
            android:textSize="30sp"
            android:gravity="clip_vertical"
            android:id="@+id/flare_row_brightness"
            android:textStyle="bold" />



        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:layout_height="fill_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/flare_row_date_hour"
                android:gravity="center"
                android:textSize="16sp"
                android:text="19:25:27"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="10/04/2015"
                android:id="@+id/flare_row_date_day"/>

        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="@string/flare_row_altitude"
                     />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:text="88"
                    android:textStyle="bold"
                    android:id="@+id/flare_row_altitude"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:text="@string/flare_row_azimuth"
                     />
                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/flare_row_azimuth"
                    android:textStyle="bold"
                    android:text="111"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>




</android.support.v7.widget.CardView>
