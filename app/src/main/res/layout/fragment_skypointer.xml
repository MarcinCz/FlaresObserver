<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="0dp"
    android:paddingRight="0dp"
    android:background="@color/background_material_dark">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/skypointer_help"
            android:text="@string/skypointer_help"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:textColor="@color/primary_material_light"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"/>

        <ImageView
            android:id="@+id/sky_pointer_arrow_circle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:src="@drawable/arrow_circle_orange"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="bottom|right"
                android:layout_marginLeft="30dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/primary_material_light"
                        android:text="@string/skypointer_altitude_phone"
                        />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/primary_material_light"
                        android:text="88째"
                        android:id="@+id/skypointer_altitude_phone"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/primary_material_light"
                        android:text="@string/skypointer_azimuth_phone"
                        />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/primary_material_light"
                        android:text="88째"
                        android:id="@+id/skypointer_azimuth_phone"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">
                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="@color/primary_material_light"
                    android:text="@string/skypointer_time_left"
                    />
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/primary_material_light"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:id="@+id/skypointer_time_left"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="right"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/primary_material_light"
                        android:text="@string/skypointer_brightness_flare"
                        />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/primary_material_light"
                        android:text="0.0"
                        android:id="@+id/skypointer_flare_brightness"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/primary_material_light"
                        android:text="@string/skypointer_altitude_flare"
                        />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/primary_material_light"
                        android:text="88째"
                        android:id="@+id/skypointer_flare_altitude"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/primary_material_light"
                        android:text="@string/skypointer_azimuth_flare"
                        />
                    <TextView
                        android:layout_width="30dp"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:textColor="@color/primary_material_light"
                        android:text="88째"
                        android:id="@+id/skypointer_flare_azimuth"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


